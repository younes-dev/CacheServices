{% extends 'base.html.twig' %}

{% block body %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
          integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous"
          xmlns="http://www.w3.org/1999/html">

    <style>
        table {
            border-collapse: collapse;
            border-spacing: 0;
            width: 100%;
            border: 1px solid #ddd;
        }

        th {
            text-align: left;
            padding: 10px;
            background-color: greenyellow;
            font-size: small;

        }

        td {
            text-align: left;
            padding: 10px;
            font-size: small;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        h3{
            text-align: center;
            margin-top: -20px;
        }

        .btn-primary{
        margin-top: 38px!important;
        }

        div.scroll {
            background-color: lightblue;
            height: 500px;
            width: 450px;
            overflow-y: scroll;
        }

    </style>
    <div class="container-fluid mt-5">
        <div class="row">
            <div class="col-md-4">
                <h3> All Articles </h3>
                <table>
                    <tr>
                        <th>ID</th>
                        <th>Titre</th>
                        <th>Content</th>
                        <th>Date</th>
                        <th>Image</th>
                    </tr>
                    {% for article in articles %}
                        <tr>
                            <td>{{ article.id }}</td>
                            <td>{{ article.titre }}</td>
                            <td>{{ article.content }}</td>
                            <td>{{ article.createdAt|date }}</td>
                            <td>
                                <img src="{{ asset('/Images/'~ article.image) }}" alt="" height="60px" width="60px">
                            </td>
                        </tr>
                    {% endfor %}

                </table>
            </div>

            <div class="col-md-4">
                <h3> Range of Articles [0..20]</h3>

                {########################################}
                {% form_theme form 'bootstrap_4_layout.html.twig' %}

                {{ form_start(form) }}
                  {#c hange Form Name from twig by merge new Variables #}
{#                {{ dump(form.vars) }}#}
{#                {%  set ArticleList=form.vars|merge({"id":"ArticleList","name":"ArticleList","full_name":"ArticleList","unique_block_prefix":"_ArticleList",}) %}#}
{#                {{ dump(ArticleList) }}#}

                <div class="my-custom-class-for-errors">
                    {{ form_errors(form) }}
                </div>

                <div class="row">
                    <div class="col-md-4">
                        {{ form_row(form.start) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.end) }}
                    </div>
                    <div class="col-md-4">
                        {{ form_row(form.search) }}
                    </div>
                </div>
                {{ form_end(form) }}

                {########################################}




                <div class="scroll">
                <table>
                    <tr>
                        <th>ID</th>
                        <th>Titre</th>
                        <th>Content</th>
                        <th>Date</th>
                        <th>Image</th>
                    </tr>
                    {% for article in list %}
                        <tr>
                            <td>{{ article.id }}</td>
                            <td>{{ article.titre }}</td>
                            <td>{{ article.content }}</td>
                            <td>{{ article.createdAt|date }}</td>
                            <td>
                                <img src="{{ asset('/Images/'~ article.image) }}" alt="" height="60px" width="60px">
                            </td>
                        </tr>
                    {% endfor %}

                </table>
                </div>
            </div>

            <div class="col-md-4">
                    <h3> Enabled Status Articles </h3>
                <table>
                    <tr>
                        <th>ID</th>
                        <th>Titre</th>
                        <th>Content</th>
                        <th>Date</th>
                        <th>Image</th>
                    </tr>
                    {% for article in enabledArticles %}
                        <tr>
                            <td>{{ article.id }}</td>
                            <td>{{ article.titre }}</td>
                            <td>{{ article.content }}</td>
                            <td>{{ article.createdAt|date }}</td>
                            <td>
                                <img src="{{ asset('/Images/'~ article.image) }}" alt="" height="60px" width="60px">
                            </td>
                        </tr>
                    {% endfor %}

                </table>
            </div>

        </div>


    </div>
    {########################################################################}


{% endblock %}
